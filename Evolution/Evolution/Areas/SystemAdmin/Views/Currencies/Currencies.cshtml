@model Evolution.Models.ViewModels.ViewModelBase
@using Evolution.Resources

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="panel panel-default">
    <div class="panel-heading">@Model.PageTitle</div>
    <div class="panel-body">
        <div class="row">
            <div class="col-sm-12">
                <div id="currencies" class="table-responsive"></div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {

        var gridOptions = {
            appname: '@EvolutionResources.lblApplicationName',
            container: 'currencies',
            tableclass: 'gridStyle',
            pagesize: 10,
            pagenumber: 1,
            showsearch: true,
            keyfield: 'Id',
            datasourceurl: '/SystemAdmin/Currencies/GetCurrencies?index={INDEX}&pageno={PAGENO}&pagesize={PAGESIZE}&search={SEARCH}',
            addurl: '@Url.Action("Edit")?id=-1',
            editurl: '@Url.Action("Edit")?id={KEYFIELD}',
            deleteurl: '@Url.Action("Delete")?id={KEYFIELD}&index={INDEX}',
            deleteconfirm: '@EvolutionResources.errConfirmDeleteItem',
            columnDefs: [
                { heading: '@EvolutionResources.lblCurrencyCode', width: '', class: '', fields: [{ type: 'field', field: 'CurrencyCode', width: '', class: '' }] },
                { heading: '@EvolutionResources.lblCurrencyName', width: '', class: '', fields: [{ type: 'field', field: 'CurrencyName', width: '', class: '' }] },
                { heading: '@EvolutionResources.lblExchangeRate', width: '', class: '', fields: [{ type: 'field', field: 'ExchangeRate', width: '', class: '' }] },
                { heading: '@EvolutionResources.lblSymbol', width: '', class: '', fields: [{ type: 'field', field: 'CurrencySymbol', width: '', class: '' }] },
                { heading: '@EvolutionResources.lblFormatTemplate', width: '', class: '', fields: [{ type: 'field', field: 'FormatTemplate', width: '', class: '' }] },
                { heading: '@EvolutionResources.lblEnabled', width: '90px', class: 'text-center', fields: [{ type: 'enabled', field: 'Enabled', width: '', class: '' }] },
                {
                    heading: '@EvolutionResources.lblAction', width: '80px', class: 'text-center',
                    fields: [
                        { type: 'buttonedit', text: 'Edit', class: '', icon: 'edit' },
                        { type: 'buttondelete', text: 'Delete', class: '', icon: 'trash' }
                    ]
                }
            ]
        };

        gridManager.InitialiseGrid(gridOptions);
    });
</script>
