@model Evolution.Models.ViewModels.EditCountryViewModel
@using Evolution.Resources

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Save", "Countries", FormMethod.Post)) {
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.LGS)
    @Html.HiddenFor(m => m.Country.Id)

    <div class="panel panel-default">
        <div class="panel-heading">@Model.PageTitle</div>
        <div class="panel-body">
            <div class="row">
                <div class="col-sm-2 labelpadding">
                    @EvolutionResources.lblCountryName
                </div>
                <div class="col-sm-5 cellpadding">
                    @Html.EditorFor(m => m.Country.CountryName, new { htmlAttributes = new { @class = "form-control", @style = "width:100%", @maxlength = "50" } })
                </div>
            </div>
            <div class="row">
                <div class="col-sm-2 labelpadding">
                    @EvolutionResources.lblISO2Code
                </div>
                <div class="col-sm-5 cellpadding">
                    @Html.EditorFor(m => m.Country.ISO2Code, new { htmlAttributes = new { @class = "form-control", @style = "width:25%", @maxlength = "2" } })
                </div>
            </div>
            <div class="row">
                <div class="col-sm-2 labelpadding">
                    @EvolutionResources.lblISO3Code
                </div>
                <div class="col-sm-5 cellpadding">
                    @Html.EditorFor(m => m.Country.ISO3Code, new { htmlAttributes = new { @class = "form-control", @style = "width:25%", @maxlength = "3" } })
                </div>
            </div>
            <div class="row">
                <div class="col-sm-2 labelpadding">
                    @EvolutionResources.lblUNCode
                </div>
                <div class="col-sm-5 cellpadding">
                    @Html.EditorFor(m => m.Country.UNCode, new { htmlAttributes = new { @class = "form-control", @style = "width:25%", @maxlength = "3" } })
                </div>
            </div>
            <div class="row">
                <div class="col-sm-2 labelpadding">
                    @EvolutionResources.lblEnabled
                </div>
                <div class="col-sm-6 labelpadding">
                    @Html.CheckBoxFor(m => m.Country.Enabled)
                </div>
            </div>
        </div>
        <div class="panel-footer text-right">
            <button type="submit" name="command" value="save" class="btn btn-sm btn-primary" onclick="DisplayProgress()">@EvolutionResources.btnSave</button>
            <button type="submit" name="command" value="cancel" class="btn btn-sm btn-default" onclick="DisplayProgress()">@EvolutionResources.btnCancel</button>
        </div>
    </div>
}
<script type="text/javascript">
    ApplyFocus('Country_CountryName');
</script>

