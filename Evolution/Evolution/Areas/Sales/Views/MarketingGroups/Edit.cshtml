
@model Evolution.Models.ViewModels.EditMarketingGroupViewModel
@using Evolution.Resources

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Save", "MarketingGroups", FormMethod.Post)) {
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.LGS)
    @Html.HiddenFor(m => m.MarketingGroup.Id)
    @Html.HiddenFor(m => m.MarketingGroup.CompanyId)

    <div class="panel panel-default">
        <div class="panel-heading">@Model.PageTitle</div>
        <div class="panel-body">
            <div class="row">
                <div class="col-sm-2 labelpadding">
                    @EvolutionResources.lblGroupName
                </div>
                <div class="col-sm-5 cellpadding">
                    @Html.EditorFor(m => m.MarketingGroup.MarketingGroupName, new { htmlAttributes = new { @class = "form-control", @style = "width:75%", @maxlength = "30" } })
                </div>
            </div>
            <div class="row">
                <div class="col-sm-2 labelpadding">
                    @EvolutionResources.lblEnabled
                </div>
                <div class="col-sm-6 labelpadding">
                    @Html.CheckBoxFor(m => m.MarketingGroup.Enabled)
                </div>
            </div>
        </div>
        <div class="panel-footer text-right" style="font-size:1.5em;">
            <button type="submit" name="command" value="save" class="button button-primary" onclick="DisplayProgress()">
                <span class="glyphicon glyphicon-ok" data-toggle="tooltip" data-placement="top" title="@EvolutionResources.btnSave"></span>
            </button>
            <button type="submit" name="command" value="cancel" class="button" onclick="DisplayProgress()">
                <span class="glyphicon glyphicon-remove" data-toggle="tooltip" data-placement="top" title="@EvolutionResources.btnCancel"></span>
            </button>
        </div>
    </div>
}
<script type="text/javascript">
    ApplyFocus('MarketingGroup_MarketingGroupName');
</script>

