@model Evolution.Models.ViewModels.EditCreditCardViewModel
@using Evolution.Resources

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Save", "CreditCards", FormMethod.Post)) {
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.ParentId)
    @Html.HiddenFor(m => m.LGS)
    @Html.HiddenFor(m => m.CreditCard.Id)
    @Html.HiddenFor(m => m.CreditCard.CompanyId)
    @Html.HiddenFor(m => m.CreditCard.CustomerId)

    <div class="panel panel-default">
        <div class="panel-heading">@Model.PageTitle</div>
        <div class="panel-body">
            <div class="row">
                <div class="col-sm-2 labelpadding">
                    @EvolutionResources.lblCardProvider
                </div>
                <div class="col-sm-3 cellpadding">
                    @Html.DropDownListFor(m => m.CreditCard.CreditCardProviderId,
                                               new SelectList(Model.CardProviderList, "Id", "Text"),
                                               new { @class = "form-control", @style = "width:100%" })
                </div>
            </div>
            <div class="row">
                <div class="col-sm-2 labelpadding">
                    @EvolutionResources.lblCardNumber
                </div>
                <div class="col-sm-3 cellpadding">
                    @Html.EditorFor(m => m.CreditCard.CreditCardNo, new { htmlAttributes = new { @class = "form-control", @style = "width:100%", @maxlength = "16" } })
                </div>
            </div>
            <div class="row">
                <div class="col-sm-2 labelpadding">
                    @EvolutionResources.lblNameOnCard
                </div>
                <div class="col-sm-3 cellpadding">
                    @Html.EditorFor(m => m.CreditCard.NameOnCard, new { htmlAttributes = new { @class = "form-control", @style = "width:100%", @maxlength = "42" } })
                </div>
            </div>
            <div class="row">
                <div class="col-sm-2 labelpadding">
                    @EvolutionResources.lblExpiry
                </div>
                <div class="col-sm-1 cellpadding">
                    @Html.EditorFor(m => m.CreditCard.Expiry, new { htmlAttributes = new { @class = "form-control", @style = "width:100%", @maxlength = "5" } })
                </div>
            </div>
            <div class="row">
                <div class="col-sm-2 labelpadding">
                    @EvolutionResources.lblCCV
                </div>
                <div class="col-sm-1 cellpadding">
                    @Html.EditorFor(m => m.CreditCard.CCV, new { htmlAttributes = new { @class = "form-control", @style = "width:100%", @maxlength = "3" } })
                </div>
            </div>
            <div class="row">
                <div class="col-sm-2 labelpadding">
                    @EvolutionResources.lblEnabled
                </div>
                <div class="col-sm-5 labelpadding">
                    @Html.CheckBoxFor(m => m.CreditCard.Enabled)
                </div>
            </div>
        </div>
        <div class="panel-footer">
            <button type="submit" name="command" value="save" class="btn btn-sm btn-primary" onclick="DisplayProgress()">@EvolutionResources.btnSave</button>
            <button type="submit" name="command" value="cancel" class="btn btn-sm btn-default" onclick="DisplayProgress()">@EvolutionResources.btnCancel</button>
        </div>
    </div>
}
<script type="text/javascript">
    ApplyFocus('CreditCard_CreditCardProviderId');
</script>




