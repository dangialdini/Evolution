@model Evolution.Models.ViewModels.EditLocationViewModel
@using Evolution.Resources

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Save", "Locations", FormMethod.Post)) {
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.LGS)
    @Html.HiddenFor(m => m.Location.Id)
    @Html.HiddenFor(m => m.Location.CompanyId)

    <div class="panel panel-default">
        <div class="panel-heading">@Model.PageTitle</div>
        <div class="panel-body">
            <div class="row">
                <div class="col-sm-2 labelpadding">
                    @EvolutionResources.lblLocationName
                </div>
                <div class="col-sm-5 cellpadding">
                    @Html.EditorFor(m => m.Location.LocationName, new { htmlAttributes = new { @class = "form-control", @style = "width:100%", @maxlength = "30" } })
                </div>
            </div>
            <div class="row">
                <div class="col-sm-2 labelpadding">
                    @EvolutionResources.lblLocationIdentification
                </div>
                <div class="col-sm-5 cellpadding">
                    @Html.EditorFor(m => m.Location.LocationIdentification, new { htmlAttributes = new { @class = "form-control", @style = "width:100%", @maxlength = "10" } })
                </div>
            </div>
            <div class="row">
                <div class="col-sm-2 labelpadding">
                    @EvolutionResources.lblStreet
                </div>
                <div class="col-sm-5 cellpadding">
                    @Html.EditorFor(m => m.Location.Street, new { htmlAttributes = new { @class = "form-control", @style = "width:100%", @maxlength = "255" } })
                </div>
            </div>
            <div class="row">
                <div class="col-sm-2 labelpadding">
                    @EvolutionResources.lblCity
                </div>
                <div class="col-sm-5 cellpadding">
                    @Html.EditorFor(m => m.Location.City, new { htmlAttributes = new { @class = "form-control", @style = "width:100%", @maxlength = "255" } })
                </div>
            </div>
            <div class="row">
                <div class="col-sm-2 labelpadding">
                    @EvolutionResources.lblState
                </div>
                <div class="col-sm-5 cellpadding">
                    @Html.EditorFor(m => m.Location.State, new { htmlAttributes = new { @class = "form-control", @style = "width:100%", @maxlength = "255" } })
                </div>
            </div>
            <div class="row">
                <div class="col-sm-2 labelpadding">
                    @EvolutionResources.lblPostCode
                </div>
                <div class="col-sm-5 cellpadding">
                    @Html.EditorFor(m => m.Location.PostCode, new { htmlAttributes = new { @class = "form-control", @style = "width:100%", @maxlength = "11" } })
                </div>
            </div>
            <div class="row">
                <div class="col-sm-2 labelpadding">
                    @EvolutionResources.lblCountry
                </div>
                <div class="col-sm-5 cellpadding">
                    @Html.EditorFor(m => m.Location.Country, new { htmlAttributes = new { @class = "form-control", @style = "width:100%", @maxlength = "255" } })
                </div>
            </div>
            <div class="row">
                <div class="col-sm-2 labelpadding">
                    @EvolutionResources.lblContactName
                </div>
                <div class="col-sm-5 cellpadding">
                    @Html.EditorFor(m => m.Location.Contact, new { htmlAttributes = new { @class = "form-control", @style = "width:100%", @maxlength = "255" } })
                </div>
            </div>
            <div class="row">
                <div class="col-sm-2 labelpadding">
                    @EvolutionResources.lblPhoneNumber
                </div>
                <div class="col-sm-5 cellpadding">
                    @Html.EditorFor(m => m.Location.ContactPhone, new { htmlAttributes = new { @class = "form-control", @style = "width:100%", @maxlength = "21" } })
                </div>
            </div>
            <div class="row">
                <div class="col-sm-2 labelpadding">
                    @EvolutionResources.lblNotes
                </div>
                <div class="col-sm-5 cellpadding">
                    @Html.EditorFor(m => m.Location.Notes, new { htmlAttributes = new { @class = "form-control", @style = "width:100%", @maxlength = "255" } })
                </div>
            </div>
            <div class="row">
                <div class="col-sm-2 labelpadding">
                    @EvolutionResources.lblEnabled
                </div>
                <div class="col-sm-6 labelpadding">
                    @Html.CheckBoxFor(m => m.Location.Enabled)
                </div>
            </div>
        </div>

        <div class="panel-footer text-right">
            <button type="submit" name="command" value="save" class="btn btn-sm btn-primary" onclick="DisplayProgress()">@EvolutionResources.btnSave</button>
            <button type="submit" name="command" value="cancel" class="btn btn-sm btn-default" onclick="DisplayProgress()">@EvolutionResources.btnCancel</button>
        </div>
    </div>
}

<script type="text/javascript">
    ApplyFocus('Location_LocationName');
</script>